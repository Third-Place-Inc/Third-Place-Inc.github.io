{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: dev with auto open",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "(http://localhost:\\d+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    }
  ]
}